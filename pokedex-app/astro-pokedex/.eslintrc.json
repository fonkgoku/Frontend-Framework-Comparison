{
  "env": {
    "jest/globals": true
  },
  "ignorePatterns": ["node_modules"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "jest"
  ],
  "rules": {
    "react/prop-types": 0
  }
}
